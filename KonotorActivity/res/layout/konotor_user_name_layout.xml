<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/konotor_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >
 
    <TextView
        android:id="@+id/konotor_textSubjectMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/konotor_what_is_your_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
    <EditText
        android:id="@+id/konotor_message_subject_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:hint="@string/konotor_john_doe"
        >
    </EditText>
</LinearLayout>