<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/unread_background_drawable"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/conv_child_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp" >

        <ImageView
            android:id="@+id/contactimage"
            android:layout_alignBottom="@+id/conv_child_container_messages"       
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:src="@drawable/placeholder_profile" />
        <!-- android:visibility="invisible" -->

        <RelativeLayout
            android:id="@+id/conv_child_container_messages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/contactimage"
            android:background="@drawable/konotor_callout2x_alt"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/message_play_bt"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/voice_overlay_recordbg"
                android:src="@drawable/konotor_play2x" />

            <RelativeLayout
                android:id="@+id/relative_m_inner_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/message_play_bt" >

                <!-- android:progress="50" -->

                <com.demach.konotor.view.KonotorTextView
                    android:id="@+id/user_m_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="@string/you"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold" />

                <com.demach.konotor.view.KonotorTextView
                    android:id="@+id/message_m_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message_play_progress"
                    android:layout_toRightOf="@+id/upload_status"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light_gray" 
                    />
                
                

                <com.demach.konotor.layout.MediaProgressBar
                    android:id="@+id/message_play_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/user_m_name"
                    android:max="100"
                    android:maxHeight="3dp"
                    android:padding="0dp"
                    android:progressDrawable="@drawable/seek_drawable"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/seekbar_thumb_small"
                    android:thumbOffset="9999dp" />

                <com.demach.konotor.view.KonotorTextView
                    android:id="@+id/message_m_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/message_play_progress"
                    android:layout_marginLeft="5dp"
                    android:text="@string/duration"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light_gray" />

                <com.demach.konotor.view.KonotorTextView
                    android:id="@+id/downloading_your_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/user_m_name"
                    android:text="@string/downloading"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/download_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/downloading_your_message"
                    android:layout_toRightOf="@+id/downloading_your_message"
                    android:indeterminate="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.demach.konotor.view.KonotorTextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relative_m_inner_layout"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/a_very_long_message_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#252525" />
            
            <ImageView 
                    android:id="@+id/upload_status"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignTop="@+id/conv_child_container_messages"
                    android:src="@drawable/konotor_upload"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/upload_status"/>

                <!-- android:visibility="invisible" -->
            
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sticker_rel_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conv_child_container"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:visibility="gone" >

        <WebView
            android:id="@+id/sticker_webview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sticker_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_rel_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conv_child_container"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/photo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@android:color/white"
            android:maxHeight="200dp"
            android:maxWidth="280dp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>