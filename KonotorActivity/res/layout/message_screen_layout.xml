<?xml version="1.0" encoding="utf-8"?>
<com.demach.konotor.layout.MessageRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
	>
    <ListView
        android:id="@+id/conversation_haed_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative_layout_reply"
        android:layout_below="@+id/nav_m_relative_layout"
        android:transcriptMode="alwaysScroll" 
        android:divider="#FFFFFF"
    	android:dividerHeight="0dp"
        />

    <RelativeLayout
        android:id="@+id/nav_m_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/nav_100" >

            <ImageView
        android:id="@+id/message_back_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/nav_prev" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/go_back"/>


    <TextView
        android:id="@+id/conv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/speakerToggle_img"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/message_back_bt"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textStyle="bold" />
    
        <ImageView
        android:id="@+id/speakerToggle_img"
        android:layout_width="27dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/speakeron" 
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/toggle_speaker"/>
        
    </RelativeLayout>
    


<!--     <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/conversation_haed_list"
        android:layout_alignParentLeft="true"
        android:background="@color/light_gray" /> -->

    <RelativeLayout
        android:id="@+id/relative_layout_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conversation_haed_list"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/conversation_haed_list" 
        android:background="@color/white"
        >



        <RelativeLayout
            android:id="@+id/relative_layout_reply_inner"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/m_message_reply_text_bt"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/m_message_reply_voice_bt"
                android:ems="10"
                android:hint="@string/compose_new_message"
                android:inputType="textMultiLine" 
                android:layout_marginRight="7dp"
                android:textColor="@android:color/black"
                style="@style/HoloLightEditText"
                />

            <ImageView
                android:id="@+id/m_message_reply_voice_bt"
                android:background="@drawable/voice_overlay_recordbg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/konotor_mic2x" 
                android:contentDescription="@string/response_with_voice"
                android:visibility="visible"
                />
            
            <ImageView
                android:id="@+id/m_message_send_bt"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_overlay_sendbg"
                android:src="@drawable/konotor_send2x"
                android:contentDescription="@string/send_message"
                android:visibility="invisible"
                />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/light_gray" />



    </RelativeLayout>

</com.demach.konotor.layout.MessageRelativeLayout>