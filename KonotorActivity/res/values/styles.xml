<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="HoloLightEditText">
    	<item name="android:background">@drawable/konotor_edit_text_holo_light</item>
	</style>
	
	<style name="KonotorAnimations" />

	<!-- PopDownMenu -->
	<style name="KonotorAnimations.PopDownMenu" />
	
	<style name="KonotorAnimations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/konotor_grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/konotor_shrink_from_bottom</item>
	</style>
	
	<style name="KonotorAnimations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/konotor_grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/konotor_shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="KonotorAnimations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/konotor_grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/konotor_shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="KonotorAnimations.PopDownMenu.Reflect">
		<item name="@android:windowEnterAnimation">@anim/konotor_pump_top</item>
		<item name="@android:windowExitAnimation">@anim/konotor_disappear</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="KonotorAnimations.PopUpMenu" />
	
	<style name="KonotorAnimations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/konotor_grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/konotor_shrink_from_top</item>
	</style>
	
	<style name="KonotorAnimations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/konotor_grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/konotor_shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="KonotorAnimations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/konotor_grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/konotor_shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="KonotorAnimations.PopUpMenu.Reflect">
		<item name="@android:windowEnterAnimation">@anim/konotor_pump_bottom</item>
		<item name="@android:windowExitAnimation">@anim/konotor_disappear</item>
	</style>
    

</resources>
